{
    "manifest_version": 3,
    "name": "DarkMatter",
    "version": "1.0.0",
    "description": "A basic extension to battle dark patterns",
    "action": {
        "default_title": "Click to open side panel"
    },
    "icons": { "16": "images/darkLogo2.png",
           "48": "images/darkLogo2.png",
          "128": "images/darkLogo2.png" },
    "content_scripts" : [
        {
            "matches": [
            "https://*/*",
            "http://*/*"
            ],
            "js": ["scripts/checkbox.js", "scripts/clickjacking.js", "scripts/storageListener.js"]
        }
    ],
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "scripting",
        "alarms",
        "aiLanguageModelOriginTrial",
        "sidePanel"
    ],

    "side_panel": {
        "default_path": "index.html"
    },

    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "commands": {
        "_execute_action": {
          "suggested_key": {
            "default": "Ctrl+B",
            "mac": "Command+B"
          }
        }
      },
      "background": {
        "service_worker": "scripts/service-worker.js",
        "type": "module"
      },
      "minimum_chrome_version": "102",
      "omnibox": {
        "keyword": "api"
      }
}